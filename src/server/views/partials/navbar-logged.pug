nav.navbar.navbar-expand-md.navbar-dark.navbar-transparent
            a.navbar-brand EduEducate
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#basicNav' aria-controls='basicNav' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
        
            .collapse.navbar-collapse#basicNav
                ul.navbar-nav.ml-auto
                    li.nav-item
                        a.far.fa-star.score
                            span.number
                                |  #{score}
                    li.nav-item
                        a.nav-link(href='/home')
                            span Home
                    li.nav-item.dropdown
                        a#navbarDropdownTasks.nav-link.dropdown-toggle(data-toggle='dropdown' aria-haspopup='true' aria-expanded='false') Tasks
                        .dropdown-menu(aria-labelledby='navbarDropdownTasks')
                            a.dropdown-item(href='/tasks/videos') Videos
                            a.dropdown-item(href='/tasks/readings/1') Readings
                            a.dropdown-item(href='/tasks/exercises/1') Exercises
                    li.nav-item.dropdown
                        a.nav-link.dropdown-toggle#navbarDropdownProfile(data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            span.name #{name}
                            i.fas.fa-user-alt
                        .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownProfile')
                            a.dropdown-item(href='/user/profile') Profile
                            a.dropdown-item(href='/user/logout') Log out